generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//TODO: Create index since each event looks for the event based on the origin_endpoint and origin_verb
model Event {
  id      String  @id @default(uuid())
  name    String
  weight  Int
  origin_endpoint String
  origin_verb   String

  userEvent UserEvent[]
}

model UserEvent {
  id      String  @id @default(uuid())
  event_id  String
  user_id   String
  weight    Int

  user   User @relation(fields: [user_id], references: [id])
  event   Event @relation(fields: [event_id], references: [id])
}

model User {
  id      String  @id @default(uuid())
  karma_score   Int
  userEvent UserEvent[]
}